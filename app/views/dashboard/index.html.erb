<div class='container text-center'>
  <% if user_signed_in? %>
    <% content_for :title, 'Home' %>

      <h1 class="text-center mt-5"><b><i>PAYMENT AND TIMELOG CHARTS</i></b></h1>

      <div class='row'>
        <div class='col-md-6'>
          <div class="card mb-3">
            <div class="card-header">
              <%= fa_icon('line-chart') %>
              Payments Chart
            </div>
            <div class="card-body">
              <%= line_chart @payments %>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card mb-3">
            <div class="card-header">
              <%= fa_icon('line-chart') %>
              Time Logs Chart
            </div>
            <div class="card-body">
              <%= line_chart @time_logs %>
            </div>
          </div>
        </div>
      </div>
      <hr>

      <h1>Top Projects</h1>

      <table class='table table-hover table-bordered shadow p-3 mb-5 bg-white rounded'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Total Payments</th>
            <th>Hours Logged</th>
          </tr>
        </thead>

        <tbody>
          <% @top_projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.total_payments %></td>
              <td><%= project.hours_logged %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h1>Bottom Projects</h1>

      <table class='table table-hover table-bordered shadow p-3 mb-5 bg-white rounded'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Total Payments</th>
            <th>Hours Logged</th>
          </tr>
        </thead>

        <tbody>
          <% @bottom_projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.total_payments %></td>
              <td><%= project.hours_logged %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <h1>Project Management System</h1>

    <div class='d-inline'>
      <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary' %>
      <%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
