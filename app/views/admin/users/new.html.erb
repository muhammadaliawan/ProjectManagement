<% content_for :title, 'Create User' %>

<div class='container'>
  <div class='form-group margin_left_right_15'>
    <%= link_to fa_icon('arrow-left'), admin_users_path, class: 'btn btn-info', title: 'Back' %>
    <span><b>New User</b></span>
  </div>

  <%= form_for @user, url: admin_users_path do |form| %>
    <div class='form-group col-md-6'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :cnic %>
      <%= form.text_field :cnic, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :role %>
      <%= form.select(:role, roles_helper, {} , class: 'form-control') %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.submit class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
