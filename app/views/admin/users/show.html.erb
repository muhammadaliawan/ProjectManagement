<% content_for :title, 'User Profile' %>

<div class='container'>
  <div class='d-flex justify-content-center h-100 d-table'>
    <table class='table table-hover text-center'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Address</th>
          <th>Cnic</th>
          <th>Phone Number</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.email %></td>
          <td><%= @user.role.capitalize %></td>
          <td><%= @user.address %></td>
          <td><%= @user.cnic %></td>
          <td><%= @user.phone_number %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <%= link_to fa_icon('arrow-left', text: 'Back'), admin_users_path, class: 'btn btn-info' %>
  <%= link_to fa_icon('pencil-square-o', text: 'Edit Profile'), edit_admin_user_path, class: 'btn btn-info' %>
</div>
