<% content_for :javascript_includes do %>
  <%= javascript_include_tag 'user.js' %>
<% end %>

<div class='container'>
  <%= form_for @user, url: admin_user_path(@user) do |form| %>

    <div class='form-group'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :cnic %>
      <%= form.text_field :cnic, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :roles %>
      <small class="form-text text-muted"><%= t('.developer_will_be_set_if_left_checked') %></small>
      <div>
        <%= form.label :admin %>
        <%= form.radio_button :admin, {}, { type: 'radio', class: 'check', value: '1', checked: @user.admin? } %>
      </div>
      <div>
        <%= form.label :manager %>
        <%= form.radio_button :manager, {}, { type: 'radio', class: 'check', value: '1', checked: @user.manager? } %>
      </div>
      <div>
        <%= form.label :developer %>
        <%= form.radio_button :developer, {}, { type: 'radio', class: 'check', value: '1', checked: @user.developer? } %>
      </div>
    </div>

    <div class='form-group actions '>
      <%= form.submit ({:class => 'btn btn-success'}) %>
    </div>

    <%= link_to 'Back', admin_users_path, class: 'btn btn-info' %>
  <% end %>
</div>
