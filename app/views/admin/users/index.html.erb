<% content_for :title, 'Users' %>

<div class='container'>
  <div class='row'>
    <div class='form-group col-md-6'>
      <%= link_to new_admin_user_path, class: 'btn btn-success' do %>
        <% fa_icon 'user-plus', text: 'Create User' %>
      <% end %>
    </div>
  </div>
  <h1>Users</h1>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan='4'></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role.capitalize %></td>
          <td>
            <div class='float-right'>
              <% if user.enable? %>
                <%= link_to fa_icon('lock'), change_user_status_admin_user_path(user.id), method: :patch, data: { confirm: 'Are you sure?' }, class: 'col-md-6' %>
              <% else %>
                <%= link_to fa_icon('unlock'), change_user_status_admin_user_path(user.id), method: :patch, data: { confirm: 'Are you sure?' }, class: 'col-md-6' %>
              <% end %>
              <%= link_to fa_icon('eye'), admin_user_url(user.id), method: :get, class: 'col-md-6' %>
              <%= link_to fa_icon('pencil-square-o'), edit_admin_user_url(user.id), method: :get, class: 'col-md-6' %>
              <%= link_to fa_icon('trash'), admin_user_url(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'col-md-6' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
