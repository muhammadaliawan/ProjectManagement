<% content_for :title, 'Users' %>

<div class='container'>
  <div class='row'>
    <div class='form-group col-md-6'>
      <%= link_to new_admin_user_path, class: 'btn btn-primary' do %>
        <% fa_icon 'user-plus', title: 'Create User' %>
      <% end %>
    </div>
  </div>

  <div class='form-group float-right'>
    <%= form_tag(admin_users_path, method: :get, remote: true) do %>
      <div class='input-group active-cyan-4 mb-4'>
        <%= search_field_tag :query, params[:query], placeholder: 'Search', class: 'form-control' %>
        <div class='input-group-btn ml-3'>
          <%= button_tag "", class: 'btn btn-info fa fa-search' %>
        </div>
      </div>
    <% end %>
  </div>

  <h1>Users</h1>
  <div class='all_users'>
    <%= render 'users_table', users: @users %>
  </div>
</div>
