<div class="modal-header">
  <h5 class="modal-title" id="staticBackdropLabel">Please Enter The Payment</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class='errors-div'></div>

<div class="modal-body">
  <%= form_for @attachment, remote: true do |f| %>
    <div class="form-group">
      <div class="form-label-group">
        <%= f.label :filename %>
        <%= f.file_field :filename %>
      </div>
      <%= f.hidden_field :attachable_id, value: attachable_id %>
      <%= f.hidden_field :attachable_type, value: attachable_type  %>

    <div class='mb-5 mt-3'>
      <%= f.submit 'Save Photo', class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
