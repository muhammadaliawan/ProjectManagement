<div class='dropdown'>
  <button class='btn dropdown-toggle' type='button' id='dropdownMenuButton' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'> <%= image_tag (current_user.attachment.filename.url), class: 'rounded width-30' if current_user.attachment%></button>
  
  <ul class='dropdown-menu dropdown-menu-right' aria-labelledby='dropdownMenuButton'>
    <li><%= link_to fa_icon('pencil-square-o', text: 'Edit Profile'), edit_user_registration_path, class: 'p-2 text-black' %></li>
    <li><%= link_to fa_icon('key', text: 'Change Password'), edit_password_user_path(current_user.id), class: 'p-2 text-black' %></li>
    <div class="dropdown-divider"></div>
    <li><%= link_to fa_icon('sign-out', text: 'Logout'), destroy_user_session_path, method: :delete, class: 'p-2 text-black' %></li>
  </ul>
</div>
