<div class="modal-header">
  <h5 class="modal-title" id="staticBackdropLabel">Enter Your Time Log</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class='errors-div'></div>

<div class="modal-body">
  <%= form_for [current_user.role, @project, @time_log], remote: true do |f| %>
    <div class="form-group">
      <div class="form-label-group">
        <%= f.label :task %>
        <%= f.text_field :task, class: "form-control" %>
      </div>

      <div class="form-label-group">
        <%= f.label :start_time %>
        <%= f.datetime_field :start_time, class: "form-control" %>
      </div>

      <div class="form-label-group">
        <%= f.label :end_time %>
        <%= f.datetime_field :end_time, class: "form-control" %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>

    <%= f.submit class: "btn btn-dark btn-block" %>
  <% end %>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
