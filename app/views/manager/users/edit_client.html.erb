<div class='container'>
  <%= form_for @client, url: update_client_manager_user_path(@client) do |form| %>

    <div class='form-group'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :cnic %>
      <%= form.text_field :cnic, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: 'form-control', required: true %>
    </div>

    <div class='form-group'>
      <%= form.label :roles %>
      <div>
        <%= form.label :client %>
        <%= form.check_box :client?, class: 'check' %>
      </div>
    </div>

    <div class='form-group actions '>
      <%= form.submit ({:class => 'btn btn-success'}) %>
    </div>

    <%= link_to 'Back', clients_manager_users_path, class: 'btn btn-info' %>
  <% end %>
</div>
