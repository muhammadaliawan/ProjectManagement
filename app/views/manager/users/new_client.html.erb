<% content_for :title, 'Create Client' %>

<div class='container'>
  <%= form_for @client, url: create_client_manager_users_path(@client) do |form| %>
    <div class='form-group col-md-6'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :address %>
      <%= form.text_field :address, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :cnic %>
      <%= form.text_field :cnic, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :phone_number %>
      <%= form.text_field :phone_number, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.submit 'Create Client', class: 'btn btn-success' %>
    </div>

    <div class='form-group col-md-6'>
      <%= link_to 'Back', clients_manager_users_path, class: 'btn btn-info' %>
    </div>
  <% end %>
</div>
