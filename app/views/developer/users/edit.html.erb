<h1>Edit Profile</h1>

<%= form_for @developer, url: developer_user_path(@user) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :cnic %>
    <%= form.text_field :cnic, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: 'form-control' %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit ({:class => 'btn btn-success'}) %>
  </div>
<% end %>

<br>
<%= link_to 'Back', developer_user_path, class: 'btn btn-info' %>
