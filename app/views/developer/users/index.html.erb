<p id="notice"><%= notice %></p>

<h1>Clients</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h1>Projects</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.email %></td>
        <td><%= project.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h1>TimeLogs</h1>
<table>
  <thead>
    <tr>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @time_logs.each do |time_log| %>
      <tr>
        <td><%= time_log.start_time %></td>
        <td><%= time_log.end_time %></td>
        <td><%= time_log.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<hr>

<h1>User</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
        <td><%= current_user.name %></td>
        <td><%= current_user.email %></td>
        <td><%= current_user.role %></td>
  </tbody>
</table>

<br>


<%= link_to 'Show', developer_user_path(current_user), class: 'btn btn-info' %>
