<% content_for :title, 'User' %>

<h1>User</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= current_user.name %></td>
      <td><%= current_user.email %></td>
      <td><%= current_user.role %></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Show', developer_user_path(current_user), class: 'btn btn-info' %>
