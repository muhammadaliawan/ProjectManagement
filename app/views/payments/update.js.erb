<% if @payment.errors.any? %>
  $('.errors-div').append("<%= j render 'shared/errors', object: @payment %>");
<% else %>
  $('#myModal').modal('hide');
  $('table#payments tbody').find("#<%= "payment_row_#{@payment.id}" %>").replaceWith("<%= j render 'payment_row', payment: @payment %>");
<% end %>
