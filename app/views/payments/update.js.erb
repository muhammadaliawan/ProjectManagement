<% if @payment.errors.any? %>
  $('.errors-div').replaceWith("<%= j render 'shared/errors', object: @payment %>");
<% else %>
  $('#myModal').modal('hide');
  $("#payment_row_<%= @payment.id %>").replaceWith("<%= j render 'payment_row', payment: @payment %>");
  $('.project_total_payments_class').html("<%= project_total_payments(@project) %>");
<% end %>
