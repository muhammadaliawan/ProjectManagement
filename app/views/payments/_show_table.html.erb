<div class='container'>
  <div>
    <h3>Project: <%= @project.name %></h3>
    <h5>Payment Details</h5>
      <div class='float-right'>
        <%= link_to fa_icon('pencil-square-o'), edit_project_payment_path(payment.project, payment), remote: true, class: 'col-md-6', title: 'Edit' %>
      </div>
  </div>

  <table class='table text-center'>
    <thead>
      <tr>
        <th>Amount</th>
        <th>Currency</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= @payment.amount %></td>
        <td><%= @payment.currency %></td>
        <td><%= @payment.date %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
