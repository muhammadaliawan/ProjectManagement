<% content_for :title, 'Create Project' %>

<div class='container'>
  <%= form_for @project, url: projects_path(@project,id: @client) do |form| %>
    <div class='form-group col-md-6'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.label :description %>
      <%= form.text_field :details, class: 'form-control', required: true %>
    </div>

    <div class='form-group col-md-6'>
      <%= form.submit 'Create Project', class: 'btn btn-success' %>
    </div>

    <div class='form-group col-md-6'>
      <%= link_to 'Back', projects_path, class: 'btn btn-info' %>
    </div>
  <% end %>
</div>
