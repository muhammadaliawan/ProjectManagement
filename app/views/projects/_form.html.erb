<%= form_for @project, url: yield(:path) do |form| %>
  <div class='form-group col-md-6'>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class='form-group col-md-6'>
    <%= form.label :details %>
    <%= form.text_field :details, class: 'form-control', required: true %>
  </div>

  <div class='form-group col-md-6'>
    <%= form.label :client %>
    <%= form.select :client, options_from_collection_for_select(clients, :id, :name, selected: project.client_id).html_safe, {}, class: 'form-control' %>
  </div>

  <div class='form-group col-md-6'>
    <%= form.submit 'Update Project', class: 'btn btn-success' %>
  </div>
<% end %>
