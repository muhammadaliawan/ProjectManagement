<% content_for :title, 'Projects' %>

<div class='container'>
  <div class='row'>
    <div class='form-group col-md-6'>
      <%= link_to fa_icon('user-plus'), new_project_path, class: 'btn btn-success', title: 'Create Project' %>
    </div>
  </div>
  <h1>Projects</h1>

  <table class='table table-hover text-center'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td>
            <%= link_to fa_icon('eye'), project_path(project), class: 'col-md-6', title: 'See Profile' %>
            <%= link_to fa_icon('pencil-square-o'), edit_project_path(project), class: 'col-md-6', title: 'Edit Profile' %>
            <%= link_to fa_icon('trash'), project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'col-md-6', title: 'Delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
