<% content_for :title, 'Projects' %>

<div class='container'>
  <div class='row'>
    <div class='form-group col-md-6'>
      <%= link_to new_project_path, class: 'btn btn-success' do %>
        <% fa_icon 'user-plus', text: 'Create Project' %>
      <% end %>
    </div>
  </div>
  <h1>Projects</h1>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan='2'></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td></td>
          <td>
            <div class='float-right'>
              <%= link_to fa_icon('eye'), projects_url(project.id), method: :get, class: 'col-md-6' %>
              <%= link_to fa_icon('pencil-square-o'), projects_url(project.id), method: :get, class: 'col-md-6' %>
              <%= link_to fa_icon('trash'), projects_url(project.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'col-md-6' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
