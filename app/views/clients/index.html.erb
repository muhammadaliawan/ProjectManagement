<% content_for :title, 'Clients' %>

<div class='container'>
  <div class='row'>
    <div class='form-group col-md-6'>
      <% if current_user.admin? %>
        <%= link_to fa_icon('user-plus'), new_admin_client_path, class: 'btn btn-primary', title: 'Create Client' %>
      <% elsif current_user.manager? %>
        <%= link_to fa_icon('user-plus'), new_manager_client_path, class: 'btn btn-primary', title: 'Create Client' %>
      <% end %>
    </div>
  </div>

  <div class='form-group float-right'>
    <%= form_with method: :get, remote: true do |form| %>
      <div class="input-group active-cyan-4 mb-4">
        <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        <div class="input-group-btn ml-3">
          <%= button_tag "", class: 'btn btn-info fa fa-search' %>
        </div>
      </div>
    <% end %>
  </div>

  <h1>Clients</h1>
  <div class='all_clients'>
    <%= render 'clients_table', clients: @clients %>
  </div>
</div>
